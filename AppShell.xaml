<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LifeBooks.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LifeBooks"
    xmlns:views="clr-namespace:LifeBooks.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="LifeBooks">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:BookListPage}"
        Route="MainPage" />
    <ShellContent
        Title="AddBook"
        ContentTemplate="{DataTemplate views:BookRegistrationPage}"
        Route="BookRegistrationPage" />
</Shell>
